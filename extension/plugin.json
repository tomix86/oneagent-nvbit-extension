{
  "version": "1.0.39",
  "name": "custom.python.nvbit_extension",
  "type": "python",
  "requiredAgentVersion": "1.191",
  "entity": "PROCESS_GROUP_INSTANCE",
  "metricGroup": "gpu.cuda",
  "processTypeNames": [
    "UNKNOWN",
    "LINUX_SYSTEM",
    "WINDOWS_SYSTEM",
    "JAVA",
    "DOTNET",
    "RUBY",
    "PERL",
    "NODE_JS",
    "PYTHON",
    "GO"
  ],
  "source": {
    "package": "nvbit_extension",
    "className": "NVBitExtension",
    "install_requires": [],
    "activation": "Singleton"
  },
  "metrics": [
    {
      "timeseries": {
        "key": "gpu_occupancy",
        "unit": "Percent",
        "aggregation": "count",
        "displayname": "GPU memory used by the process"
      }
    },
    {
      "timeseries": {
        "key": "instructions_per_second",
        "unit": "PerSecond",
        "aggregation": "count",
        "displayname": "GPU instructions executed per second"
      }
    }
  ],
  "ui": {
    "keymetrics": [
      {
        "key": "gpu_occupancy",
        "displayname": "GPU Occupancy",
        "aggregation": "avg",
        "mergeaggregation": "avg"
      }
    ],
    "keycharts": [
      {
        "group": "GPU Metrics",
        "title": "Occupancy",
        "series": [
          {
            "key": "gpu_occupancy",
            "aggregation": "avg",
            "displayname": "Total",
            "seriestype": "line"
          }
        ]
      }
    ],
    "charts": [
      {
        "group": "GPU Metrics",
        "title": "Occupancy",
        "series": [
          {
            "key": "gpu_occupancy",
            "aggregation": "avg",
            "displayname": "Total",
            "seriestype": "line"
          }
        ]
      },
      {
        "group": "GPU Metrics",
        "title": "Instructions executed",
        "series": [
          {
            "key": "instructions_per_second",
            "aggregation": "avg",
            "displayname": "Instructions executed",
            "seriestype": "bar"
          }
        ]
      }
    ]
  },
  "configUI": {
    "displayName": "OneAgent NVBit Extension",
    "properties": [
      {
        "key": "enable_debug_log",
        "displayName": "Enable debug logging",
        "displayOrder": 1
      },
      {
        "key": "enable_intrumentation",
        "displayName": "Enable instrumentation",
        "displayOrder": 2
      },
      {
        "key": "monitored_pg_names",
        "displayName": "Names of process groups that should be monitored",
        "displayOrder": 3,
        "displayHint": "CUDA app,blockchain_processor[,...]"
      }
    ]
  },
  "properties": [
    {
      "key": "enable_debug_log",
      "type": "boolean",
      "defaultValue": false
    },
    {
      "key": "enable_intrumentation",
      "type": "boolean",
      "defaultValue": true
    },
    {
      "key": "monitored_pg_names",
      "type": "string",
      "defaultValue": ""
    }
  ]
}